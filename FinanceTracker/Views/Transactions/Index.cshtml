@model IEnumerable<FinanceTracker.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-3xl font-semibold mb-6 text-gray-800">Transactions</h1>

<p class="mb-4">
    <a asp-action="Create" class="inline-block bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition">
        + Create New
    </a>
</p>

<div class="overflow-x-auto bg-white rounded shadow">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-indigo-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-indigo-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-indigo-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-indigo-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-indigo-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-indigo-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            @foreach (var item in Model)
            {
                <tr class="hover:bg-indigo-50 transition">
                    <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                        @String.Format("{0:C}", item.Amount)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                        @item.Date.ToString("yyyy-MM-dd")
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                        @Html.DisplayFor(modelItem => item.Category.Id)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
