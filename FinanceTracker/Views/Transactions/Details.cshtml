@model FinanceTracker.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-3xl font-semibold mb-6 text-gray-800">Transaction Details</h1>

<div class="bg-white p-6 rounded shadow max-w-lg">
    <h4 class="text-lg font-semibold mb-4 text-gray-700">Transaction</h4>
    <hr class="mb-6 border-gray-300" />

    <dl class="grid grid-cols-3 gap-x-6 gap-y-4 text-gray-700">
        <dt class="font-semibold text-right">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-span-2">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="font-semibold text-right">@Html.DisplayNameFor(model => model.Amount)</dt>
        <dd class="col-span-2">@String.Format("{0:C}", Model.Amount)</dd>

        <dt class="font-semibold text-right">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-span-2">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="font-semibold text-right">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-span-2">@Html.DisplayFor(model => model.Category.Id)</dd>

        <dt class="font-semibold text-right">@Html.DisplayNameFor(model => model.User)</dt>
        <dd class="col-span-2">@Html.DisplayFor(model => model.User.Id)</dd>
    </dl>
</div>

<div class="mt-8 space-x-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="text-indigo-600 hover:underline font-semibold">Edit</a>
    |
    <a asp-action="Index" class="text-indigo-600 hover:underline font-semibold">Back to List</a>
</div>
